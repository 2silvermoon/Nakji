<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "com.kfc.db.IMemberDao">
	<select id="listDao" resultType="com.kfc.db.MemberDto">
		select * from member
	</select>
	
	<select id="registerDao">
		update member set enabled = 1 where id = #{id}
	</select>
	
	<select id="deregisterDao">
		update member set enabled = 0 where id = #{id}
	</select>
	
	<select id="authDao">
		update member set auth = #{auth} where id = #{id}
	</select>
</mapper>